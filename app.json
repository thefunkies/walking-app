{
  "expo": {
    "name": "Walking Challenge",
    "slug": "walking-challenge-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "walkingapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSHealthShareUsageDescription": "This app needs access to health data to track your steps and walking progress.",
        "NSHealthUpdateUsageDescription": "This app needs permission to update health data for step tracking.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to track your walking routes and provide accurate step counting."
      }
    },
    "android": {
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "viewport": {
        "width": "device-width",
        "initialScale": 1,
        "maximumScale": 1,
        "userScalable": false
      }
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",

      "expo-location",
      "expo-sensors"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
